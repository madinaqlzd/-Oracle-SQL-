select salary, count(employee_id) from employees where salary>5000
group by salary;
select employee_id, sum(salary) from employees where salary>5000
group by employee_id;
select employee_id, min(salary) from employees where salary>5000
group by employee_id;
select employee_id, max(salary) from employees where salary>5000
group by employee_id;
select employee_id, avg(salary) from employees where salary>5000
group by employee_id;
